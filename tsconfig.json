{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "ES6",
        "target": "ESNext",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./public/js/",
        "sourceMap": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./src/ts/functions/*",
        "./src/ts/class/*",
        "./src/ts/elements/*",
        "./src/ts/pages/*",
        "./src/ts/index.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "types": [
        "firebase"
    ]
} 