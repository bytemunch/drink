{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "none",
        "target": "es2015",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "../public/js",
        "sourceMap": true,
        "esModuleInterop": true
    },
    "include": [
        "./functions/*",
        "./class/*",
        "./elements/*",
        "./pages/*",
        "./index.ts", "./functions/shrinkImage.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
} 